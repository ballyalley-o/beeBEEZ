<%- include('../includes/head.ejs') %>
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main class="pt-20">
      <form action="/admin/<% if (editing) { %>edit-product<% } else { %>add-product<% } %>" class="product-form w-full" method="POST">
       <div class="card parent-div-input flex items-center mt-20">
        <div class="card-body center w-96">
        <div class="form-control mb-6 w-full">
            <label for="title" class="text-gray-500 font-bold mb-4 md:mb-0 pr-4">Title</label>
            <input
                type="text"
                name="title"
                id="title"
                class="input-shop bg-gray-200 appearance-none border-2 border-gray-200 rounded py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"
                value="<% if (editing) { %><%= product.title %><% } %>"
                >
        </div>
        <div class="form-control mb-6 w-full">
            <label
            for="imageUrl"
            class="text-gray-500 font-bold mb-4 md:mb-0 pr-4">Image URL
            </label>
            <input
                type="text"
                name="imageUrl"
                id="imageUrl"
                class="inline-block input-shop bg-gray-200 appearance-none border-2 border-gray-200 rounded py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"
                value="<% if (editing) { %><%= product.imageUrl %><% } %>"
                >
        </div>
        <div class="form-control mb-6 w-full">
            <label
                for="price"
                class="text-gray-500 font-bold mb-4 md:mb-0 pr-4">Price
                </label>
            <input
                type="text"
                name="price"
                id="price"
                class="input-shop bg-gray-200 appearance-none border-2 border-gray-200 rounded py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"
                step="0.01"
                value="<% if (editing) { %><%= product.price %><% } %>"
                >
        </div>
        <div class="form-control mb-6 w-full">
            <label
                for="description"
                class="text-gray-500 font-bold mb-4 md:mb-0 pr-4">Description
                </label>
            <textarea
                type="text"
                name="description"
                id="description"
                class="inline-block input-shop bg-gray-200 appearance-none border-2 border-gray-200 rounded py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"
                rows="5"
                placeholder="Description"
                >
                <% if (editing) { %><%= product.description %><% } %>
            </textarea>
        </div>

        <% if (editing) { %>
            <input type="hidden" name="productId" value="<%= product._id %>">
        <% } %>
        <button type="submit" class="shadow mt-10 bg-orange-500 hover:bg-yellow-400 focus:shadow-outline focus:outline-none text-white hover:text-black font-bolder py-2 px-4 rounded">
            <% if (editing) { %>UPDATE PRODUCT<% } else { %>ADD TO CART<% } %></button>
        </div>
        </div>
      </form>
    </main>
<%- include('../includes/end.ejs') %>