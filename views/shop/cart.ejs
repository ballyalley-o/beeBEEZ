<%- include('../includes/head.ejs') %>
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if (products.length > 0) { %>
            <div class="container m-10 pt-20">
                <ul class="card">
                    <% products.forEach(p => { %>
                        <li>
                            <p><%= p.title %> Quantity: (<%= p.quantity %>)</p>
                            <form action="/cart-delete-item" method="POST">
                                <input type="hidden" name="productId" value="<%= p._id %>">
                                <button class="btn btn-error" type="submit">DELETE</button>
                            </form>
                        </li>
                    <% }) %>
                </ul>
                <div class="item-center pt-10">
                    <form action="/create-order" method="POST">
                        <button type="submit" class="btn btn-error bg-error">ORDER</button>
                    </form>
                </div>
            </div>
        <% } else { %>
            <div class="pt-40">
                <h1 class="text-center display-1 text-8xl text-white pb-10">No products in your cart</h1>
                <h1 class="text-center display-1 text-8xl text-white mb-5">ðŸ›’</h1>
                <p class="text-center text-4xl text-white"><i>..fill me up</i></p>
            </div>
        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>