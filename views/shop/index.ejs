<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if (prods.length > 0) { %>
        <div class="m-16 pt-20">
            <div class="header flex flex-col content-center my-20">
                        <h1 class="hero text-8xl font-bold text-gray-900">Welcome</h1>
                        <p class="text-gray-500 text-2xl text-center">
                            <i class="fa-li fa fa-spinner fa-spin">
                            </i> A not so-great shopping store
                        </p>
                </div>
            <div class="grid lg:grid-cols-4 grid-rows-4 md:grid-cols-2 sm:grid-cols-1 gap-10">
                <% for (let product of prods) { %>
                <div class="card bg-base-100 shadow-2xl rounded-12 overflow-hidden">
                    <div class="sm:col-span-1 px-2 py-2 m-2">
                        <figure class="sm:col-span-1 rounded-8 overflow-hidden">
                            <img
                                src="<%= product.imageUrl %>"
                                alt="<%= product.title %>"
                                class="w-full h-48 sm:h-56 object-cover" />
                        </figure>
                        <div class="w-full px-2 py-2 content m-4">
                                <h2 class="card-title block text-2xl m-5" id="prod-title">
                                    <%= product.title %>
                                </h2>
                                <h4 class="card-price text-5xl font-bold mt-2 text-center">
                                 <%= product.price %>
                                </h4>
                            </div>
                            <div class="card-description block h-20 my-4 mt-4 gap-2 block item-center">
                                    <p class="text-center mt-4"><%= product.description %></p>
                            </div>
                            <div class="justify-start w-96">
                                <div class="block">
                                <%- include('../includes/add-to-cart.ejs', {product: product}) %>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>
                </div>
            </div>
            <% } else { %>
        <div class="container text-center mt-40">
            <div class="card hero m-20 ">
                <h1 class="card-title text-8xl"> No Products Found!</h1>
            </div>
        </div>
        <% } %>


