<%- include('../includes/head.ejs') %>
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if (orders.length <= 0) { %>
         <div class="text-center m-auto">
                    <h1 class="card-title text-8xl mt-10">Your CART is EMPTY</h1>
                    <span class="text-8xl">ðŸ˜¢</span>
                    <p class="card-text">come'on fill me up... </p>

                    <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-20">
                        <a href="/">back to home</a>
                    </button>
                </div>
        <% } else { %>
            <div class="container m-auto text-center pt-20">
                <ul class="card card-body border-2xl">
                    <% orders.forEach(order => { %>
                        <li class="card card-body">
                            <h1 class="card card-title text-2xl font-bold"><%= order._id %></h1>
                                <ul>
                                    <% order.items.forEach(product => { %>
                                        <li><%= product.title %> (<%= product.quantity %>)</li>
                                    <% }) %>
                                </ul>
                        </li>
                    <% }) %>
                </ul>
            </div>
            <% } %>
    </main>
    <%- include('../includes/end.ejs') %>