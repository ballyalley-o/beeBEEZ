<%- include('../includes/head.ejs') %>
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <div class="card flex grid min-h-screen items-center lg:grid-cols-3 sm:grid-cols-1 grid-rows-2 p-20 gap-4 m-20">
            <div class="container flex-1 col-span-2 p-16 grid-flow-col">
                <div class="col-span-2 sm:col-span-1">
                    <h1 class="text-8xl font-bold text-right"><%= product.title %></h1>
                    <hr>
                </div>
                <div class="text-right col-span-1 ">
                    <div class="bg-gray-800 justify-self-end p-5 ml-5 my-5 rounded-b-box">
                        <h1 class="text-8xl font-bold m-5 text-white">NZ$  <%= product.price %></h1>
                    </div>
                    <div class="m-10">
                        <p class="text-2xl m-2"><%= product.description %></p>
                    </div>
                    <% if (isAuthenticated) { %>
                        <form action="/cart" method="POST">
                            <input type="hidden" name="productId" value="<%= product._id %>">
                            <button class="btn-lg btn-accent text-accent px-5 bg-white hover:bg-accent-800 rounded-lg hover:text-white font-bold" type="submit"><b>ADD TO CART</b></button>
                        </form>
                    <% } else { %>
                            <a
                                href="/login">
                                <button class="btn-lg btn-accent text-accent px-5 bg-white hover:bg-accent-800 rounded-lg hover:text-white font-bold">
                                    <b>LOGIN</b>
                                </button>
                            </a>
                    <% } %>
                    <!-- <form action="/cart" method="POST">
                        <button
                            class="btn btn-accent mt-5 text-xl text-accent hover:bg-accent-800 hover:text-white font-bold" type="submit">Add to Cart</button>
                        <div class="input" type="hidden" name="prodId" value="<%= product._id %>"></div>
                    </form> -->
                </div>
            </div>
            <!-- image size -->
            <div class="col-span-3 sm:col-span-1 ">
                <img src="<%= product.imageUrl %>" class="rounded-xl shadow-xl transition duration-300 ease-in-out hover:scale-105" alt="<%= product.title %>">
            </div>
        </div>
    </main>
    <%- include('../includes/end.ejs') %>